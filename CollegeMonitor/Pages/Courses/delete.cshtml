@page "/Courses/delete/{id:int}"
@model DeleteCourseModel

<h2 style="text-align: center;" class="text-danger">Aree you sure to delete course '@Model.Course.Name'?</h2>

<form method="post">
  <input type="hidden" asp-for="Course.Id" />

  <button type="submit" class="btn btn-danger" style="text-align: center;"><i class="bi bi-archive"></i> Delete</button>
  <a href="/Courses" class="btn btn-primary" style="text-align: center;"><i class="bi bi-x-circle"></i> Cancel</a>
</form>