@page "/Courses"
@model CoursesModel
<h2>List of all courses</h2>
<a href="/courses/create" class="btn btn-primary"><i class="bi bi-file-plus"></i> New course</a>


<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Textbook</th>
      <th scope="col">Credit Hours</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var course in Model.Courses)
    {
        <tr>
            <th scope="row">1</th>
            <td>@course.Name</td>
            <td>@course.TextBook</td>
            <td>@course.CreditHrs</td>           
        </tr>   
    }    
  </tbody>
</table>



