@page "/Courses"
@model CoursesModel
<h2>List of all courses</h2>
<a href="/courses/create" class="btn btn-success"><i class="bi bi-file-plus"></i> New course</a>


<table class="table">
  <thead>
    <tr>
      <th scope="col">S/N</th>
      <th scope="col">Name</th>
      <th scope="col">Textbook</th>
      <th scope="col">Credit Hours</th>
      <th scope="col">Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var course in Model.Courses)
    {
        <tr>
             <td>@course.Id</td>
            <td>@course.Name</td>
            <td>@course.TextBook</td>
            <td>@course.CreditHrs</td>  
            <td><a href="/edit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
            <a href="" class="btn btn-danger"><i class="bi bi-archive"></i> Delete</a></td>       
        </tr>   
    }    
  </tbody>
</table>



