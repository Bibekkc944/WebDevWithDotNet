@page "/Courses/create"
@model CreateCourseModel

<h2>Create Course</h2>

<form method="post">
  <div class="mb-3">
    <label  class="form-label">Name</label>
    <input asp-for="Course.Name" class="form-control">
  </div>
  <div class="mb-3">
    <label  class="form-label">Tetbook</label>
    <input asp-for="Course.TextBook" class="form-control">
  </div>
  <div class="mb-3">
    <label  class="form-label">Credit Hours</label>
    <input asp-for="Course.CreditHrs" class="form-control">
  </div>
  
  <button type="submit" class="btn btn-primary"><i class="bi bi-arrow-down-circle"></i> Save</button>
</form>